<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="5"><h1 align="center"><%= @registered_application.name %>'s Events</h1></th>
    </tr>
    <tr>
      <th>Event</th>
      <th>Date and Time</th>
    </tr>
  </thead>

  <tbody>
    <% @registered_application.events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.created_at %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <th colspan="5" align="center"><%= link_to 'Add An Event To Track', new_registered_application_event_path(@registered_application), class: 'btn btn-lg btn-success center-block' %></th>
  </tfoot>
</table>